&
    position absolute
    top 3px
    left 3px
    width 100%
    height 105px
    margin 0px
    padding 0px
    list-style-type none
    li
        position relative
        padding 0px
        float left
        height @height
        width 100px
        border 1px solid white
        span
            font-size 0.8em
            position absolute
            bottom 3px
            color #222
            left 0px
            width 100%
            text-align center

        &.drogy_old
        &.kradeze_old
            margin-left 15px
        &:hover
            outline 3px solid #eee
            cursor pointer
        &:active
            outline 3px solid #ddd
        &.active
            outline 3px solid #dadada
        svg
            margin-top 12px
            margin-left 5px
